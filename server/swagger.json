{
  "swagger": "2.0",
  "info": {
    "title": "CBA-MASTER-MIND-GEOPARDY API",
    "version": "0.0.1",
    "description": "API documentation for the CBA-MASTER-MIND-GEOPARDY project.",
    "contact": {
      "name": "CBA-MASTER-MIND-GEOPARDY Team",
      "email": "subelzaolivitocabezas@gmail.com"
    },
    "license": {
      "name": "AGPL-3.0",
